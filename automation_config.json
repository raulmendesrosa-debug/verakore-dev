{
  "workspace": {
    "name": "Verakore Website",
    "version": "2.0.0",
    "description": "Professional IT services website with automated quality control",
    "maintainer": "Verakore Development Team"
  },
  "automation": {
    "character_encoding": {
      "enabled": true,
      "frequency": "daily",
      "auto_fix": true,
      "check_patterns": [
        "â€\"",
        "â†'",
        "â€™",
        "â€œ",
        "â€",
        "ðŸ'‹",
        "ðŸ'Œ"
      ]
    },
    "git_operations": {
      "enabled": true,
      "auto_commit": false,
      "commit_message_template": "Automated maintenance: {task}",
      "branch": "main",
      "remote": "origin"
    },
    "deployment": {
      "enabled": true,
      "frequency": "manual",
      "auto_deploy": false,
      "platforms": ["cloudflare", "github"],
      "pre_deploy_checks": true
    },
    "quality_checks": {
      "enabled": true,
      "frequency": "daily",
      "checks": [
        "encoding",
        "mobile",
        "links",
        "performance",
        "accessibility"
      ],
      "mobile_breakpoints": [768, 480],
      "performance_thresholds": {
        "max_file_size_mb": 1,
        "max_total_size_mb": 10
      }
    },
    "backup": {
      "enabled": true,
      "frequency": "weekly",
      "retention_days": 30,
      "include_patterns": [
        "*.html",
        "*.css",
        "*.js",
        "*.md",
        "*.json",
        "*.toml",
        "*.py",
        "*.bat",
        "*.ps1",
        "*.sh"
      ],
      "exclude_patterns": [
        "node_modules",
        ".git",
        "backups",
        "*.log"
      ]
    },
    "monitoring": {
      "enabled": true,
      "log_level": "INFO",
      "log_retention_days": 7,
      "alerts": {
        "email": false,
        "console": true,
        "file": true
      }
    }
  },
  "environment": {
    "development": {
      "auto_fix": true,
      "strict_checks": false,
      "backup_frequency": "daily"
    },
    "staging": {
      "auto_fix": false,
      "strict_checks": true,
      "backup_frequency": "daily"
    },
    "production": {
      "auto_fix": false,
      "strict_checks": true,
      "backup_frequency": "weekly",
      "pre_deploy_validation": true
    }
  },
  "schedules": {
    "daily": {
      "time": "09:00",
      "tasks": [
        "character_encoding_check",
        "mobile_responsiveness_check",
        "performance_check",
        "git_health_check"
      ]
    },
    "weekly": {
      "day": "monday",
      "time": "09:00",
      "tasks": [
        "daily_maintenance",
        "workspace_backup",
        "deployment_readiness_check"
      ]
    },
    "deployment_check": {
      "time": "17:00",
      "tasks": [
        "deployment_readiness_check"
      ]
    }
  },
  "notifications": {
    "success": {
      "enabled": true,
      "message": "Verakore automation completed successfully"
    },
    "failure": {
      "enabled": true,
      "message": "Verakore automation failed - check logs"
    },
    "warnings": {
      "enabled": true,
      "message": "Verakore automation completed with warnings"
    }
  }
}